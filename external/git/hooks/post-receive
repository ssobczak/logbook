#!/bin/bash

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"

GIT_REPO=/lemp/logbook
TMP_GIT_CLONE=/tmp/logbook
GEMFILE=$TMP_GIT_CLONE/Gemfile
PUBLIC_WWW=/lemp/logbook_pub

git clone $GIT_REPO $TMP_GIT_CLONE

BUNDLE_GEMFILE=$GEMFILE bundle install
BUNDLE_GEMFILE=$GEMFILE bundle exec jekyll build -s $TMP_GIT_CLONE/docs  -d $PUBLIC_WWW
rm -Rf $TMP_GIT_CLONE

exit
